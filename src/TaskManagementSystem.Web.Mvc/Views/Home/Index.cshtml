@using TaskManagementSystem.Web.Startup
@model TaskManagementSystem.Web.Models.Dashboards.DashboardViewModel
@{
    ViewBag.Title = L("HomePage");
    ViewBag.CurrentPageName = PageNames.Home;
}

@section scripts
{
    <environment names="Development">
        <script src="~/libs/chartjs/dist/Chart.js" asp-append-version="true"></script>
        <script src="~/view-resources/Views/Home/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/_Bundles/home-index.min.js" asp-append-version="true"></script>
    </environment>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark">@L("HomePage")</h1>
            </div>
        </div>
    </div>
</div>
<section class="content">
<div class="container-fluid">
<!-- Info boxes -->
<div class="row">
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box">
            <span class="info-box-icon bg-info elevation-1">
               <i class="fas fa-users"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text">User Count</span>
                <span class="info-box-number">
                    @Model.Report.UsersCount
                    <small></small>
                </span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
    <!-- /.col -->
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box mb-3">
            <span class="info-box-icon bg-danger elevation-1">
                <i class="fas fa-users"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text">Teams Count</span>
                <span class="info-box-number">@Model.Report.TeamsCount</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
    <!-- /.col -->
    <!-- fix for small devices only -->
    <div class="clearfix hidden-md-up"></div>
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box mb-3">
            <span class="info-box-icon bg-success elevation-1">
                <i class="fas fa-tasks"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text">All Tasks Count</span>
                 <span class="info-box-number">@Model.Report.AllTasksCount</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
    <!-- /.col -->
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box mb-3">
            <span class="info-box-icon bg-warning elevation-1">
                        <i class="fas fa-tasks"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text">CompletedTasksCount</span>
                <span class="info-box-number">@Model.Report.CompletedTasksCount</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <!-- /.card-header -->
            <div class="card-body">
                <div class="row">
                    <!-- /.col -->
                    <div class="col-md-4">
                        <p class="text-center">
                            <strong>Tasks Status</strong>
                        </p>
                        <div class="progress-group">
                                    Completed Tasks
                            <span class="float-right"><b>@Model.Report.CompletedTasksCount</b>/@Model.Report.AllTasksCount</span>
                            <div class="progress progress-sm">
                                <div class="progress-bar bg-primary" style="width: 80%"></div>
                            </div>
                        </div>
                        <!-- /.progress-group -->
                        <div class="progress-group">
                                    ToDo Tasks
                            <span class="float-right"><b>@Model.Report.ToDoTasksCount</b>/@Model.Report.AllTasksCount</span>
                            <div class="progress progress-sm">
                                <div class="progress-bar bg-danger" style="width: 75%"></div>
                            </div>
                        </div>
                        <!-- /.progress-group -->
                        <div class="progress-group">
                                    <span class="progress-text">InProgress Tasks</span>
                             <span class="float-right"><b>@Model.Report.InProgressTasksCount</b>/@Model.Report.AllTasksCount</span>
                            <div class="progress progress-sm">
                                <div class="progress-bar bg-success" style="width: 60%"></div>
                            </div>
                        </div>
                    </div>
                            <div class="col-md-4" style="max-width:78%">
                                <p class="text-center">
                                    <strong>Top Five Users Have Tasks</strong>
                                </p>
                                <div class="col-md-4">
                                    @foreach (var usr in Model.TopFiveUsers)
                                    {
                                        <div class="info-box mb-3 bg-warning">
                                            <span class="info-box-icon">
                                                <i class="fas fa-tag"></i>
                                            </span>
                                            <div class="info-box-content">
                                                <span class="info-box-text">@usr.UserName</span>
                                                <span class="info-box-number">@usr.HisTasksCount</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- ./card-body -->
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
</div>
</section>
