@using TaskManagementSystem.Web.Startup
@model TaskManagementSystem.Web.Models.CustomLogs.CustomLogListViewModel
@{
    ViewBag.Title ="Logs";
    ViewBag.CurrentPageName = PageNames.Logs;
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/CustomLogs/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/CustomLogs/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/CustomLogs/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="LogsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Description</th>
                                        <th>CreationTime</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
