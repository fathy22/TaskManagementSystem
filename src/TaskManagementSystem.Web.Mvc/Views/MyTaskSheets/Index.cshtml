@using TaskManagementSystem.Web.Models.Common.Modals;
@using TaskManagementSystem.Web.Startup
@model TaskManagementSystem.Web.Models.MyTaskSheets.MyTaskSheetListViewModel
@{
    ViewBag.Title = L("Tasks");
    ViewBag.CurrentPageName = PageNames.Tasks;
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/MyTaskSheets/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/MyTaskSheets/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Tasks")</h1>
            </div>
            <div class="col-sm-6">
                <a href="javascript:;" data-toggle="modal" data-target="#MyTaskSheetCreateModal" class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/MyTaskSheets/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="MyTaskSheetsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th style="width: 400px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("~/Views/MyTaskSheets/_CreateModal.cshtml", Model)

<div class="modal fade" id="MyTaskSheetEditModal" tabindex="-1" role="dialog" aria-labelledby="MyTaskSheetEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>
<div class="modal fade" id="TaskSheetAddCommentModal" tabindex="-1" role="dialog" aria-labelledby="TaskSheetAddCommentModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Add Comment"))
            <form name="taskSheetCreateForm" role="form" class="form-horizontal">
                <input type="hidden" id="taskId" name="taskId" />
                <div class="modal-body">
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="Comment">Comment</label>
                        <div class="col-md-9">
                            <input id="Comment" type="text" name="Comment" class="form-control" required maxlength="32" minlength="2">
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>

